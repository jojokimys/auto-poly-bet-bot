generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Market {
  id          String   @id @default(cuid())
  conditionId String   @unique
  question    String
  slug        String
  endDate     String
  active      Boolean  @default(true)
  closed      Boolean  @default(false)
  liquidity   Float    @default(0)
  volume      Float    @default(0)
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  outcomes  Outcome[]
  orders    Order[]
  snapshots MarketSnapshot[]
}

model Outcome {
  id       String @id @default(cuid())
  marketId String
  name     String
  tokenId  String
  price    Float  @default(0)

  market Market @relation(fields: [marketId], references: [id], onDelete: Cascade)

  @@unique([marketId, name])
}

model Order {
  id          String   @id @default(cuid())
  externalId  String?  @unique
  marketId    String
  tokenId     String
  side        String
  price       Float
  size        Float
  sizeMatched Float    @default(0)
  status      String   @default("OPEN")
  type        String   @default("LIMIT")
  outcome     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  market Market  @relation(fields: [marketId], references: [id])
  trades Trade[]
}

model Trade {
  id         String   @id @default(cuid())
  externalId String?  @unique
  orderId    String
  price      Float
  size       Float
  fee        Float    @default(0)
  matchTime  DateTime
  createdAt  DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id])
}

model BotSettings {
  id                  String  @id @default("default")
  // Wallet (encrypted at rest in production)
  privateKey          String  @default("")
  funderAddress       String  @default("")
  // API credentials
  apiKey              String  @default("")
  apiSecret           String  @default("")
  apiPassphrase       String  @default("")
  // Bot config
  maxBetAmount        Float   @default(10)
  minLiquidity        Float   @default(1000)
  minVolume           Float   @default(5000)
  maxSpread           Float   @default(0.05)
  autoBettingEnabled  Boolean @default(false)
  scanIntervalSeconds Int     @default(30)

  updatedAt DateTime @updatedAt
}

model MarketSnapshot {
  id          String   @id @default(cuid())
  marketId    String
  yesPrice    Float
  noPrice     Float
  volume24hr  Float    @default(0)
  spread      Float    @default(0)
  liquidity   Float    @default(0)
  snapshotAt  DateTime @default(now())

  market Market @relation(fields: [marketId], references: [id])

  @@index([marketId, snapshotAt])
}

model BotProfile {
  id            String   @id @default(cuid())
  name          String
  privateKey    String
  funderAddress String   @default("")
  signatureType Int      @default(2) // 0=EOA, 1=POLY_PROXY, 2=POLY_GNOSIS_SAFE
  apiKey        String
  apiSecret     String
  apiPassphrase String
  isActive      Boolean  @default(true)
  strategy      String   @default("value-betting")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BotLog {
  id        String   @id @default(cuid())
  profileId String?  // null for legacy / non-profile logs
  level     String   // info, warn, error, trade
  event     String   // scan, signal, order, risk, start, stop, error
  message   String
  data      String?  // JSON blob for structured metadata
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([event])
  @@index([profileId])
}

model ScalperPosition {
  id          String   @id @default(cuid())
  profileId   String
  conditionId String
  tokenId     String
  outcome     String
  entryPrice  Float
  entryTime   DateTime
  size        Float
  targetPrice Float
  stopPrice   Float
  status      String   @default("OPEN") // OPEN | CLOSED
  closedAt    DateTime?
  closeReason String?

  @@unique([profileId, conditionId])
  @@index([profileId, status])
}

// ─── AI Trading Team Models ─────────────────────────────

model AiSession {
  id         String       @id @default(cuid())
  profileId  String
  startedAt  DateTime     @default(now())
  endedAt    DateTime?
  cycleCount Int          @default(0)
  totalPnl   Float        @default(0)
  summary    String?
  decisions  AiDecision[]

  @@index([profileId])
}

model AiDecision {
  id          String   @id @default(cuid())
  sessionId   String
  profileId   String
  type        String   // "trade" | "hold" | "exit" | "skip"
  conditionId String?
  action      String?  // "BUY" | "SELL"
  tokenId     String?
  outcome     String?
  price       Float?
  size        Float?
  reason      String
  confidence  Int      // 0-100
  result      String?  // "success" | "failed" | "pending"
  pnl         Float?
  createdAt   DateTime @default(now())

  session AiSession @relation(fields: [sessionId], references: [id])

  @@index([profileId, createdAt])
  @@index([sessionId])
}

model AiLearning {
  id         String   @id @default(cuid())
  profileId  String
  category   String   // "strategy" | "risk" | "market" | "execution"
  insight    String
  confidence Int
  source     String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  @@index([profileId, category])
}
